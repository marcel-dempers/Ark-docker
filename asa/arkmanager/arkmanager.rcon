#!/bin/bash

RCON_CMDLINE="rcon -a 127.0.0.1:${RCON_PORT} -p ${ADMINPASSWORD}"

instance=$1
command=$2

if [ -z "$instance" ]
then
      echo "must supply instance, e.g @island"
      exit
fi

if [ -z "$command" ]
then
      echo "must supply command, e.g ListPlayers"
      exit
fi

instance="${instance:1}"

echo "running rcon command ${command}"
${RCON_CMDLINE} ${command}